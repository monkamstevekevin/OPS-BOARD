# Backend configuration (Spring Boot will read env vars)

# Database (Docker compose maps host 5433 -> container 5432)
DB_URL=jdbc:postgresql://localhost:5433/opsdb
DB_USER=ops
DB_PASS=ops

# API keys
# Used by backend filters; set the same keys in the Angular UI Settings
INGEST_API_KEY=change-me-ingest
ADMIN_API_KEY=change-me-admin

# Proxmox API
# Example base URL: https://YOUR-PVE:8006/api2/json
PROXMOX_BASE_URL=https://192.168.1.86:8006/api2/json
# Token must have at least VM.Audit (+ Sys.Audit for cluster listing)
PVE_TOKEN_ID=root@pam!opsboard
PVE_TOKEN_SECRET=change-me-token-secret

# Defaults and status capture (optional)
APP_DEFAULT_NODE=pve01
#APP_STATUS_TOUCH_LAST_SEEN=false
#APP_STATUS_CAPTURE_TOP=false
#APP_STATUS_CAPTURE_INTERVAL_MS=120000

# Admin network restrictions (comma-separated CIDRs/IPs)
#ADMIN_ALLOW_IPS=127.0.0.1,::1,192.168.1.0/24

